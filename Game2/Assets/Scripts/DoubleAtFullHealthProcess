using System;
using UnityEngine;
public class DoubleAtFullHealthProcess : ProcessCard
{
    public override virtual void process(Card card, Character actor, Character actee)
    {
        //if at max health
        //if (actor.health = )
        actee.increaseHealth(Math.Min(actee.Shield-(card.Damage*2), 0));

        //else do normal
        actee.increaseHealth(Math.Min(actee.Shield-(card.Damage), 0));
        actor.increaseHealth(-card.Heal);
        actor.setShield(card.Shield);
        actor.setPowerup(card.Powerup);
    }
}
